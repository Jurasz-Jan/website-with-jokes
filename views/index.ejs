<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>automaty do kawy</title>
</head>
<body>
    <div class="container">
        <h1>Żarty o automatach do kawy</h1>
        
        <!-- Form to submit a new post -->
        <form action="/submit" method="post">
            <input type="text" name="postTitle" placeholder="Title" required>
            <textarea name="postContent" placeholder="Content" required></textarea>
            <button type="submit">Submit Post</button>
        </form>

        <!-- Display posts -->
        <% posts.forEach(post => { %>
            <div class="post">
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
            </div>
        <% }); %>
    </div>
</body>
